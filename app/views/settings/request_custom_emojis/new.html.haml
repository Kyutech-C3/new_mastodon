-# app/views/admin/custom_emojis/new.html.haml を参考に作成
- content_for :page_title do
  = t('settings.request_custom_emojis.title')

= simple_form_for @custom_emoji, url: settings_request_custom_emojis_path do |f|
  = render 'shared/error_messages', object: @custom_emoji

  .fields-group
    = f.input :shortcode,
              wrapper: :with_label,
              label: t('admin.custom_emojis.shortcode'),
              hint: t('admin.custom_emojis.shortcode_hint')
  .fields-group
    = f.input :image,
              wrapper: :with_label,
              input_html: { accept: CustomEmoji::IMAGE_MIME_TYPES.join(' ') },
              hint: t('admin.custom_emojis.image_hint', size: number_to_human_size(CustomEmoji::LIMIT))

  .actions
    = f.button :button,
               t('settings.request_custom_emojis.upload'),
               type: :submit
